<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CricerzFantasy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">#279445</item>
        <item name="colorPrimaryVariant">#279445</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#279445</item>
        <item name="colorSecondaryVariant">#279445</item>
        <item name="colorOnSecondary">#279445</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#279445</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyToolbarTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="Theme.CricerzFantasy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CricerzFantasy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CricerzFantasy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>