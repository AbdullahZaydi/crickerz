<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/app_bar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/teamCard"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#279445"
        android:elevation="10dp"
        app:cardBackgroundColor="#279445"
        app:cardMaxElevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="44dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_kk"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:src="@drawable/karachi_kings" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_lq"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:src="@drawable/lahore_qalandars" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_pz"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:src="@drawable/peshawar_zalmi" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_qg"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:src="@drawable/quetta_gladiators" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_ms"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:src="@drawable/multan_sultans" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_iu"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:src="@drawable/islamabad_united" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/createTeamCard"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:clickable="true"
        android:elevation="10dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="100dp"
        app:cardMaxElevation="100dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:minHeight="?actionBarSize"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="4dp"
            app:tabMode="fixed"></com.google.android.material.tabs.TabLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>